<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g5.printbook.MainFragment">

    <RelativeLayout
        android:id="@+id/homePage_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".HomePage">


        <Button
            android:id="@+id/fetch_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/upload_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:text="Fetch your STL model"
            tools:text="Fetch your STL model" />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/visualize_button"
            android:layout_alignLeft="@+id/fetch_button"
            android:layout_alignStart="@+id/fetch_button"
            android:layout_marginBottom="50dp"
            android:text="Upload your STL model"
            tools:text="Upload your STL model" />

        <Button
            android:id="@+id/visualize_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/check_button"
            android:layout_alignEnd="@+id/fetch_button"
            android:layout_alignRight="@+id/fetch_button"
            android:layout_marginBottom="47dp"
            android:text="Visualize your 3D model"
            tools:text="Visualize your 3D model" />

        <Button
            android:id="@+id/check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/visualize_button"
            android:layout_alignLeft="@+id/visualize_button"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/visualize_button"
            android:layout_alignStart="@+id/visualize_button"
            android:layout_marginBottom="18dp"
            android:text="Check your model"
            tools:text="check your model" />

    </RelativeLayout>

</RelativeLayout>